<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"

    android:paddingTop="7.5dp"
    android:paddingLeft="25dp"
    android:onClick="seeEvent"
    android:paddingRight="25dp"
    android:layout_height="wrap_content"

    android:clipToPadding="false"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:elevation="3dp"

        >

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_weight="25"/>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="75">

            <TextView
                android:id="@+id/menorNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Juan Pérez Pérez"
                android:textColor="#FF000000"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold"
                android:lineSpacingMultiplier=".8"

                />

            <TextView
                android:id="@+id/menorCURP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="VAOS050701HVZSCNA0"
                android:textColor="#99999999"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="-3dp"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="2005-07-01"
                    android:textColor="#99999999"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="-3dp"/>

                <TextView
                    android:id="@+id/labelText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:text="Etiqueta"
                    android:textStyle="bold"
                    android:textColor="#b7ab14"
                    android:textSize="11sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

