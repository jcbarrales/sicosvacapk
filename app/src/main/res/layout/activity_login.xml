<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/splash"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/color_blue"
        android:id="@+id/taskBarLayout"
        android:visibility="gone">


        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/login_header"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#FFFFFFFF"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/taskBarLayout"
        android:background="#99FFFFFF"
        android:id="@+id/view" />

    <ImageView
        android:id="@+id/idemapLogo"
        android:layout_width="340dp"
        android:layout_height="88dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_sicosvac" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/idemapLogo"
        android:layout_marginTop="100dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height=".5dp"
                android:layout_below="@+id/username_input"
                android:background="@android:color/white"
                android:layout_marginTop="-10dp"

                ></LinearLayout>

            <!-- INPUT -->
            <EditText
                android:id="@+id/username_input"
                android:layout_marginLeft="-40dp"
                android:hint="Nombre de Usuario"
                android:background="@android:color/transparent"
                android:textColorHint="@color/color_text_hint"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                android:layout_width="300dp"
                android:inputType="textEmailAddress"
                android:layout_height="45dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />
            <!-- ICON -->
            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/username_icon"
                android:src="@drawable/ico_user"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height=".5dp"
                android:layout_below="@+id/password_input"
                android:background="@android:color/white"
                android:layout_marginTop="-10dp"
                ></LinearLayout>
            <!-- INPUT -->
            <EditText
                android:id="@+id/password_input"
                android:layout_marginLeft="-43dp"
                android:textColorHint="@color/color_text_hint"
                android:textColor="#FFFFFF"
                android:hint="ContraseÃ±a"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:layout_width="300dp"
                android:inputType="textPassword"
                android:layout_height="45dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />
            <!-- ICON -->
            <ImageView

                android:layout_marginLeft="18dp"
                android:id="@+id/password_icon"
                android:src="@drawable/ico_password"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_btnview"
            android:elevation="7dp"
            android:text="@string/login_btnlogin"
            android:onClick="login"
            android:letterSpacing="0.10"
            android:textSize="18sp"
            android:textColor="#FFFFFFFF"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_regular"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/forgotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:shadowRadius="3"
        android:shadowDx="2.6"
        android:shadowDy="1.5"
        android:layout_marginBottom="33dp"
        android:letterSpacing="0.05"

        android:text="@string/login_forgotpassword"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_regular"
        />
</RelativeLayout>